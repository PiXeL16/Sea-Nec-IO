<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                xmlns:tools="http://schemas.android.com/tools"
                android:paddingLeft="@dimen/list_item_padding_left_right"
                android:paddingRight="@dimen/list_item_padding_left_right"
                android:paddingTop="@dimen/list_item_padding_top_bottom"
                android:paddingBottom="@dimen/list_item_padding_top_bottom"
                android:gravity="center"
                android:orientation="vertical"
    >



    <TextView
        android:id="@+id/blacklisted_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/list_item_name_text_size"
        android:textColor="@color/colorPrimaryText"
        android:layout_alignParentTop="true"
        android:typeface="sans"
        android:maxLines="1"
        android:layout_marginBottom="2dp"
        android:ellipsize="end"
        tools:text="Bac San Jose Credito"
        />


    <TextView
        android:id="@+id/blacklisted_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:typeface="sans"
        android:textSize="14sp"
        android:textColor="@color/colorSecondaryText"
        android:ellipsize="end"
        android:maxLines="2"
        tools:text="+434234545"
        />

</LinearLayout>